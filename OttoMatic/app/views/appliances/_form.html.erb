<div class="appliance">
  <%= form_for (@appliance ||= @job.appliances.new), remote: true do |f| %>

		<div class="form-element element-1">
      <span class="label"><%= f.label :brand %></span>
      <span><%= f.text_field :brand %></span>
    </div>

		<div class="form-element element-2">
      <span class="label"><%= f.label :type %></span>
      <span><%= f.text_field :type %></span>
    </div>

		<div class="form-element element-6">
      <span class="label"><%= f.label :purchased_at %></span>
      <span><%= f.text_field :purchased_at %></span>
    </div>
    
		<div class="form-element element-7">
      <span class="label"><%= f.label :model %></span>
      <span><%= f.text_field :model %></span>
    </div>

		<div class="form-element element-8">
      <span class="label"><%= f.label :serial %></span>
      <span><%= f.text_field :serial %></span>
    </div>


	<span><%= f.submit %></span>
  <% end %>
</div>
